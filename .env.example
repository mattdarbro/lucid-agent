# Server Configuration
PORT=4000
NODE_ENV=development

# Supabase (Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Database Connection (alternative to Supabase client)
DATABASE_URL=postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres

# OpenAI (for embeddings and chat)
OPENAI_API_KEY=sk-...

# Studio API Integration (for session validation)
STUDIO_API_URL=http://localhost:3000
STUDIO_APP_KEY=your-app-key-from-studio-api

# Agent Configuration
AGENT_NAME=Lucid
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSIONS=1536

# Circadian Schedule (cron expressions)
# Format: minute hour * * * (UTC time)
MORNING_CRON=0 7 * * *     # 7:00 AM UTC
MIDDAY_CRON=0 12 * * *     # 12:00 PM UTC
EVENING_CRON=0 20 * * *    # 8:00 PM UTC
NIGHT_CRON=0 2 * * *       # 2:00 AM UTC

# Feature Flags
ENABLE_AUTONOMOUS_AGENTS=true
ENABLE_WEB_RESEARCH=true   # Requires TAVILY_API_KEY
ENABLE_DREAMS=true
ENABLE_HEALTH_MONITORING=true  # Apple HealthKit integration (morning/evening loops)

# Tavily API (for web research)
TAVILY_API_KEY=tvly-your-api-key-here

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# APNs (Apple Push Notifications)
# Required for Lucid to send push notifications to your iPhone
# Get these from Apple Developer Portal > Certificates, Identifiers & Profiles > Keys
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_KEY_PATH=./AuthKey.p8
APNS_BUNDLE_ID=com.yourcompany.LucidV2
